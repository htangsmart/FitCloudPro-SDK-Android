<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?dividerVertical"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.github.kilnn.tool.widget.item.PreferenceItem
                android:id="@+id/item_static_switch"
                style="@style/Widget.Sample.PreferenceView.Item.Switch"
                app:preferenceSummary="@string/ds_heart_rate_alarm_static_des"
                app:preferenceTitle="@string/ds_heart_rate_alarm_static"
                app:showPreferenceSummary="true"/>

            <com.github.kilnn.tool.widget.item.PreferenceItem
                android:id="@+id/item_static_value"
                style="@style/Widget.Sample.PreferenceView.Item.Text"
                app:preferenceTitle="@string/ds_heart_rate_alarm_value"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.github.kilnn.tool.widget.item.PreferenceItem
                android:id="@+id/item_dynamic_switch"
                style="@style/Widget.Sample.PreferenceView.Item.Switch"
                app:preferenceSummary="@string/ds_heart_rate_alarm_dynamic_des"
                app:preferenceTitle="@string/ds_heart_rate_alarm_dynamic"
                app:showPreferenceSummary="true"/>

            <com.github.kilnn.tool.widget.item.PreferenceItem
                android:id="@+id/item_dynamic_value"
                style="@style/Widget.Sample.PreferenceView.Item.Text"
                app:preferenceTitle="@string/ds_heart_rate_alarm_value"/>

        </LinearLayout>


    </LinearLayout>

</ScrollView>