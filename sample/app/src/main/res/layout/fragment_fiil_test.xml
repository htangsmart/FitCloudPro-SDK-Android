<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceHeadline6"
        android:padding="10dp"
        android:text="@string/test_rgb_value"/>

    <TextView
        android:id="@+id/tv_rgb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceBody1"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        tools:text="[255, 255, 255]"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceHeadline4"
            android:text="R"/>

        <EditText
            android:id="@+id/et_r"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="0 ~ 255"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceHeadline4"
            android:text="G"/>

        <EditText
            android:id="@+id/et_g"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="0 ~ 255"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceHeadline4"
            android:text="B"/>

        <EditText
            android:id="@+id/et_b"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="0 ~ 255"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_rgb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/test_set_rgb_btn"/>

    <com.github.kilnn.tool.widget.item.PreferenceItem
        android:id="@+id/item_charging_light"
        style="@style/Widget.Sample.PreferenceView.Item.Switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:preferenceTitle="@string/test_charging_light"/>

</LinearLayout>