<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?dividerVertical"
        android:orientation="vertical"
        android:showDividers="middle">

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_step"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/exercise_goal_step"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_distance"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/exercise_goal_distance"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_calories"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/exercise_goal_calories"/>

    </LinearLayout>

</ScrollView>
