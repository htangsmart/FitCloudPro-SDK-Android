<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/connect_help_title1"
            android:textAppearance="?textAppearanceSubtitle1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:text="@string/device_bind_tips1"
            app:drawableStartCompat="@drawable/shape_dot_color_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:text="@string/device_bind_tips2"
            app:drawableStartCompat="@drawable/shape_dot_color_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:text="@string/device_bind_tips3"
            app:drawableStartCompat="@drawable/shape_dot_color_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:text="@string/device_bind_tips4"
            app:drawableStartCompat="@drawable/shape_dot_color_primary"/>

        <RelativeLayout
            android:id="@+id/layout_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toStartOf="@+id/btn_grant_permission"
                android:drawablePadding="4dp"
                android:text="@string/connect_help_no_scan_permission"
                android:textColor="?colorError"
                app:drawableStartCompat="@drawable/shape_dot_color_error"/>

            <Button
                android:id="@+id/btn_grant_permission"
                style="@style/Widget.Sample.Button.Outlined.Round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/action_grant"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_location_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toStartOf="@+id/btn_enable_location_service"
                android:drawablePadding="4dp"
                android:text="@string/connect_help_location_service_disabled"
                android:textColor="?colorError"
                app:drawableStartCompat="@drawable/shape_dot_color_error"/>

            <Button
                android:id="@+id/btn_enable_location_service"
                style="@style/Widget.Sample.Button.Outlined.Round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/action_turn_on"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/connect_help_title2"
            android:textAppearance="?textAppearanceSubtitle1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:text="@string/connect_help_restart_app"
            app:drawableStartCompat="@drawable/shape_dot_color_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:text="@string/connect_help_restart_bluetooth"
            app:drawableStartCompat="@drawable/shape_dot_color_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:text="@string/connect_help_restart_device"
            app:drawableStartCompat="@drawable/shape_dot_color_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:text="@string/connect_help_restart_phone"
            app:drawableStartCompat="@drawable/shape_dot_color_primary"/>
    </LinearLayout>

</ScrollView>