<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?dividerVertical"
        android:orientation="vertical"
        android:showDividers="middle">

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_mode_none"
            style="@style/Widget.Sample.PreferenceView.Item.Image"
            app:preferenceImageTint="?colorPrimary"
            app:preferenceTitle="@string/tip_disabled"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_mode_menstruation"
            style="@style/Widget.Sample.PreferenceView.Item.Image"
            app:preferenceImageTint="?colorPrimary"
            app:preferenceTitle="@string/wh_mode_menstruation"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_mode_pregnancy_prepare"
            style="@style/Widget.Sample.PreferenceView.Item.Image"
            app:preferenceImageTint="?colorPrimary"
            app:preferenceTitle="@string/wh_mode_pregnancy_prepare"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_mode_pregnancy"
            style="@style/Widget.Sample.PreferenceView.Item.Image"
            app:preferenceImageTint="?colorPrimary"
            app:preferenceTitle="@string/wh_mode_pregnancy"/>

    </LinearLayout>
</ScrollView>

